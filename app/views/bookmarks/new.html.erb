<h1>This is a new bookmark</h1>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 md-8">
      <h1>Add new bookmarks for <%= @movie.name %></h1>
      <%= simple_form_for [@movie, @movie_bookmark] do |f| %>
        <%= f.input :bookmark, collection: Bookmark.all, input_html: { multiple: true }, include_hidden: false %>
        <%= f.submit 'Add bookmarks', class: 'btn btn-primary d-flex mx-auto' %>
      <% end %>
    </div>
  </div>
</div>
